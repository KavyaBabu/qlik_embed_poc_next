import {
  LineChart,
  Line,
  XAxis,
  YAxis,
  Tooltip,
  ResponsiveContainer,
  CartesianGrid,
  ReferenceDot,
  ReferenceLine,
  Area,
} from "recharts";
import { useState, useMemo } from "react";
import styles from "./index.module.css";

export interface LineChartDataPoint {
  name: string;
  solid: number;
  dotted: number;
}

export interface LineChartProps {
  data: LineChartDataPoint[];
  valueFormatter?: (value: number) => string;
  xAxisKey?: string;
  xAxisLabel?: string;
  yAxisLabel?: string;
  height?: number;
  showGrid?: boolean;
  className?: string;
  title?: string;
  subtitle?: string;
}

const CustomTooltip = ({
  active,
  payload,
  valueFormatter,
  styles: styleModule,
}: {
  active?: boolean;
  payload?: Array<{ value: number; dataKey: string; payload: LineChartDataPoint }>;
  valueFormatter?: (value: number) => string;
  styles: typeof styles;
}) => {
  if (active && payload?.length) {
    const data = payload[0];
    return (
      <div className={styleModule.tooltip}>
        <p className={styleModule.tooltip__value}>
          {valueFormatter ? valueFormatter(data.value) : data.value}
        </p>
        <p className={styleModule.tooltip__label}>{data.payload.name}</p>
      </div>
    );
  }
  return null;
};

const LineChartComponent = ({
  data,
  valueFormatter = (v) => `${v.toFixed(0)} KL`,
  xAxisKey = "name",
  xAxisLabel = "Month",
  yAxisLabel = "Consumption (KL)",
  height = 400,
  showGrid = true,
  className,
  title,
  subtitle,
}: LineChartProps) => {
  const [hoveredDataPoint, setHoveredDataPoint] = useState<{
    xValue: string | number;
    yValue: number;
  } | null>(null);

  // Compute band between solid and dotted
  const filledData = useMemo(
    () =>
      data.map((d) => ({
        ...d,
        upper: Math.max(d.solid, d.dotted),
        lower: Math.min(d.solid, d.dotted),
      })),
    [data]
  );

  const handleMouseMove = (state: any) => {
    if (state?.activeTooltipIndex != null) {
      const index = state.activeTooltipIndex;
      const dataPoint = data[index];
      if (dataPoint) {
        setHoveredDataPoint({
          xValue: dataPoint[xAxisKey],
          yValue: dataPoint.solid,
        });
      }
    }
  };

  const handleMouseLeave = () => setHoveredDataPoint(null);

  return (
    <div className={`${styles.container} ${className || ""}`}>
      {title && <h3 className={styles.title}>{title}</h3>}
      {subtitle && <p className={styles.subtitle}>{subtitle}</p>}

      <div className={styles.wrapper}>
        <ResponsiveContainer width="100%" height={height}>
          <LineChart
            data={filledData}
            margin={{ top: 20, right: 40, left: 40, bottom: 20 }}
            onMouseMove={handleMouseMove}
            onMouseLeave={handleMouseLeave}
          >
            {/* horizontal grid only */}
            {showGrid && (
              <CartesianGrid
                strokeDasharray="3 6"
                stroke="#E5E7EB"
                horizontal={true}
                vertical={false}
              />
            )}

            <XAxis
              dataKey={xAxisKey}
              tick={{ fill: "#667085", fontSize: 12 }}
              axisLine={false}
              tickLine={false}
              dy={8}
              label={{
                value: xAxisLabel,
                position: "insideBottom",
                dy: 25,
                fill: "#667085",
                fontSize: 16,
              }}
            />

            <YAxis
              tick={{ fill: "#667085", fontSize: 12 }}
              axisLine={false}
              tickLine={false}
              dx={-8}
              label={{
                value: yAxisLabel,
                angle: -90,
                position: "insideLeft",
                dy: height / 3.3,
                dx: -20,
                fill: "#667085",
                fontSize: 16,
              }}
            />

            {/* gradient for fill between lines */}
            <defs>
              <linearGradient id="fillBetween" x1="0" y1="0" x2="0" y2="1">
                <stop offset="0%" stopColor="#2563EB" stopOpacity={0.12} />
                <stop offset="100%" stopColor="#2563EB" stopOpacity={0.03} />
              </linearGradient>
            </defs>

            {/* shaded area */}
            <Area
              type="monotone"
              dataKey="upper"
              stroke="none"
              fill="url(#fillBetween)"
            />
            <Area
              type="monotone"
              dataKey="lower"
              stroke="none"
              fill="#fff"
            />

            <Tooltip
              content={
                <CustomTooltip
                  valueFormatter={valueFormatter}
                  styles={styles}
                />
              }
              cursor={false}
            />

            {/* solid line */}
            <Line
              type="monotone"
              dataKey="solid"
              stroke="#2563EB"
              strokeWidth={2.5}
              dot={false}
              isAnimationActive={false}
            />

            {/* dotted line */}
            <Line
              type="monotone"
              dataKey="dotted"
              stroke="#2563EB"
              strokeWidth={2}
              strokeDasharray="4 6"
              dot={false}
              isAnimationActive={false}
            />

            {/* vertical hover line & dot */}
            {hoveredDataPoint && (
              <>
                <ReferenceLine
                  x={hoveredDataPoint.xValue}
                  stroke="#2563EB"
                  strokeDasharray="3 6"
                  strokeWidth={2}
                />
                <ReferenceDot
                  x={hoveredDataPoint.xValue}
                  y={hoveredDataPoint.yValue}
                  r={6}
                  fill="#fff"
                  stroke="#2563EB"
                  strokeWidth={2.5}
                />
              </>
            )}
          </LineChart>
        </ResponsiveContainer>
      </div>
    </div>
  );
};

export default LineChartComponent;


.container {
  width: 100%;
}
.title {
  font-size: 16px;
  font-weight: 600;
  color: #101828;
  margin-bottom: 4px;
}
.subtitle {
  font-size: 14px;
  color: #667085;
  margin-bottom: 24px;
}
.wrapper {
  width: 100%;
  height: 100%;
  position: relative;
}

/* Tooltip */
.tooltip {
  background-color: #0c111d;
  color: #fff;
  border-radius: 8px;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.25);
  padding: 12px 16px;
}
.tooltip__value {
  font-size: 18px;
  font-weight: 600;
  margin: 0;
}
.tooltip__label {
  font-size: 12px;
  color: #98a2b3;
  margin-top: 4px;
}
