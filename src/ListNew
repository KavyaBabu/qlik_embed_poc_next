import {
  LineChart,
  Line,
  XAxis,
  YAxis,
  Tooltip,
  ResponsiveContainer,
  CartesianGrid,
  ReferenceDot,
  ReferenceLine,
  Area,
} from "recharts";
import { useState, useMemo } from "react";
import styles from "./index.module.css";

export interface LineChartDataPoint {
  name: string;
  [key: string]: string | number;
}

export interface LineChartProps {
  data: LineChartDataPoint[];
  valueFormatter?: (value: number) => string;
  xAxisKey?: string;
  xAxisLabel?: string;
  yAxisLabel?: string;
  height?: number;
  showGrid?: boolean;
  className?: string;
  title?: string;
  subtitle?: string;
}

const CustomTooltip = ({
  active,
  payload,
  valueFormatter,
  styles: styleModule,
}: {
  active?: boolean;
  payload?: Array<{ value: number; dataKey: string; payload: LineChartDataPoint }>;
  valueFormatter?: (value: number) => string;
  styles: typeof styles;
}) => {
  if (active && payload?.length) {
    const data = payload[0];
    return (
      <div className={styleModule.tooltip}>
        <p className={styleModule.tooltip__value}>
          {valueFormatter ? valueFormatter(data.value) : data.value}
        </p>
        <p className={styleModule.tooltip__label}>{data.payload.name}</p>
      </div>
    );
  }
  return null;
};

const LineChartComponent = ({
  data,
  valueFormatter = (v) => v.toString(),
  xAxisKey = "name",
  xAxisLabel = "Month",
  yAxisLabel = "Period consumption",
  height = 300,
  showGrid = true,
  className,
  title,
  subtitle,
}: LineChartProps) => {
  const [hoveredDataPoint, setHoveredDataPoint] = useState<{
    index: number;
    xValue: string | number;
    solidValue: number;
  } | null>(null);

  // ✅ Compute upper and lower bounds to fill between dotted & solid
  const filledData = useMemo(
    () =>
      data.map((d) => ({
        ...d,
        upper: Math.max(Number(d.solid), Number(d.dotted)),
        lower: Math.min(Number(d.solid), Number(d.dotted)),
      })),
    [data]
  );

  const handleMouseMove = (state: unknown) => {
    if (
      state &&
      typeof state === "object" &&
      "activeTooltipIndex" in state &&
      typeof (state as Record<string, unknown>).activeTooltipIndex === "number"
    ) {
      const index = (state as Record<string, unknown>).activeTooltipIndex as number;
      const dataPoint = data[index];
      if (dataPoint) {
        setHoveredDataPoint({
          index,
          xValue: dataPoint[xAxisKey],
          solidValue: Number(dataPoint["solid"]),
        });
      }
    }
  };

  const handleMouseLeave = () => {
    setHoveredDataPoint(null);
  };

  return (
    <div className={`${styles.container} ${className || ""}`}>
      {title && <h3 className={styles.title}>{title}</h3>}
      {subtitle && <p className={styles.subtitle}>{subtitle}</p>}

      <div className={styles.wrapper}>
        <ResponsiveContainer width="100%" height={height}>
          <LineChart
            data={filledData}
            margin={{ top: 20, right: 40, left: 40, bottom: 20 }}
            onMouseMove={handleMouseMove}
            onMouseLeave={handleMouseLeave}
          >
            {showGrid && (
              <CartesianGrid
                strokeDasharray="0"
                stroke="rgb(var(--grey-200-base))"
                horizontal
                vertical={false}
              />
            )}

            <XAxis
              dataKey={xAxisKey}
              tick={{ fill: "rgb(var(--grey-600-base))", fontSize: 12 }}
              axisLine={false}
              tickLine={false}
              dy={8}
              label={{
                value: xAxisLabel,
                position: "insideBottom",
                dy: 25,
                fill: "rgb(var(--grey-600-base))",
                fontSize: 16,
              }}
            />

            <YAxis
              tick={{ fill: "rgb(var(--grey-600-base))", fontSize: 12 }}
              axisLine={false}
              tickLine={false}
              dx={-8}
              label={{
                value: yAxisLabel,
                angle: -90,
                position: "insideLeft",
                dy: height / 3.3,
                dx: -20,
                fill: "rgb(var(--grey-600-base))",
                fontSize: 16,
              }}
            />

            {/* Gradient for fill */}
            <defs>
              <linearGradient id="fillBetween" x1="0" y1="0" x2="0" y2="1">
                <stop offset="0%" stopColor="var(--chart-line-primary)" stopOpacity={0.15} />
                <stop offset="100%" stopColor="var(--chart-line-primary)" stopOpacity={0.05} />
              </linearGradient>
            </defs>

            {/* ✅ Fill between solid & dotted */}
            <Area
              type="monotone"
              dataKey="upper"
              stroke="none"
              fill="url(#fillBetween)"
              fillOpacity={1}
              activeDot={false}
            />
            <Area
              type="monotone"
              dataKey="lower"
              stroke="none"
              fill="white"
              fillOpacity={1}
              activeDot={false}
            />

            <Tooltip
              content={
                <CustomTooltip
                  valueFormatter={valueFormatter}
                  styles={styles}
                />
              }
              cursor={false}
            />

            {/* SOLID LINE */}
            <Line
              type="monotone"
              dataKey="solid"
              stroke="var(--chart-line-primary)"
              strokeWidth={2}
              dot={false}
              isAnimationActive={false}
            />

            {/* DOTTED LINE */}
            <Line
              type="monotone"
              dataKey="dotted"
              stroke="var(--chart-dotted-line)"
              strokeWidth={2}
              strokeDasharray="2 6"
              dot={false}
              isAnimationActive={false}
            />

            {/* ✅ Hover vertical line and dot */}
            {hoveredDataPoint && (
              <>
                <ReferenceLine
                  x={hoveredDataPoint.xValue}
                  stroke="rgb(var(--primary-500-base))"
                  strokeDasharray="2 6"
                  strokeWidth={2}
                />
                <ReferenceDot
                  x={hoveredDataPoint.xValue}
                  y={hoveredDataPoint.solidValue}
                  r={5}
                  fill="white"
                  stroke="var(--chart-line-primary)"
                  strokeWidth={2}
                />
              </>
            )}
          </LineChart>
        </ResponsiveContainer>
      </div>
    </div>
  );
};

export default LineChartComponent;



:root {
  /* Chart theme colors */
  --chart-line-primary: rgb(var(--primary-500-base));
  --chart-dotted-line: rgba(var(--primary-500-base), 1);
  --chart-line-fill: rgba(var(--primary-100-base), 0.3);
  --chart-area-fill: rgba(var(--primary-500-base), 0.12);
}

/* Container */
.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: flex-start;
  position: relative;
}

/* Title & subtitle */
.title {
  font-size: 16px;
  font-weight: 600;
  color: rgb(var(--grey-900-base));
  margin: 0 0 4px 0;
}

.subtitle {
  font-size: 14px;
  color: rgb(var(--grey-600-base));
  margin: 0 0 24px 0;
}

/* Chart wrapper */
.wrapper {
  width: 100%;
  height: 100%;
  position: relative;
  background: transparent;
  border-radius: 12px;
  padding: 0;
}

/* Tooltip styling */
.tooltip {
  background-color: rgb(var(--grey-950-base));
  color: var(--white);
  border-radius: 8px;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.25);
  padding: 12px 16px;
  pointer-events: none;
  min-width: 100px;
  text-align: left;
  transition: opacity 0.15s ease-in-out;
}

.tooltip__value {
  color: var(--white);
  font-size: 18px;
  font-weight: 600;
  margin: 0;
}

.tooltip__label {
  color: rgb(var(--grey-400-base));
  font-size: 12px;
  font-weight: 400;
  margin-top: 4px;
}

/* Hover line and dot */
.recharts-reference-line line {
  stroke-dasharray: 2 6;
}

.recharts-reference-dot circle {
  transition: transform 0.15s ease-in-out;
}

.recharts-reference-dot circle:hover {
  transform: scale(1.2);
}

/* Optional smoother area fade */
.recharts-area {
  mix-blend-mode: multiply;
}

/* Optional transition for smoother redraws */
.recharts-wrapper,
.recharts-surface {
  transition: all 0.25s ease-in-out;
}
