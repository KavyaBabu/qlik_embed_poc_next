:root {
  --sidebar-width: 16rem;
  --sidebar-width-collapsed: 4rem;
  --dashboard-bar-height: 136px;
}

.dashboardFiltersFixedBar {
  position: fixed;
  top: 0;
  left: var(--sidebar-width);
  width: calc(100vw - var(--sidebar-width));
  z-index: 1200;
  background: #fff;
  border-radius: 2rem 0 2rem 2rem;
  box-shadow: 0 4px 24px -8px rgba(0,0,0,0.10);
  display: flex;
  flex-direction: column;
  padding: 2.25rem 2.5rem 1.25rem 2.5rem;
  transition: left 0.2s, width 0.2s;
  /* prevent overlays being hidden */
  overflow: visible;
}

/* When sidebar is collapsed/icon mode (detect via html/body class, or data attribute, or a parent selector) */
body[data-sidebar-collapsed="true"] .dashboardFiltersFixedBar {
  left: var(--sidebar-width-collapsed);
  width: calc(100vw - var(--sidebar-width-collapsed));
  border-radius: 2rem 0 2rem 2rem;
}

/* Mobile view (full width) */
